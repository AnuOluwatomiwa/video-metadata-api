generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or "mysql" if you prefer
  url      = env("DATABASE_URL")
}

model Video {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  duration    Int
  genre       String
  tags        String[]
  createdAt   DateTime @default(now())
}
